set nosmoothscroll
set noautofocus

let hintcharacters="fjklasdhguionmerv"
let barposition = "bottom"
let highlight = "#ffff00"

let searchengine alc = "http://eow.alc.co.jp/search?ref=sa&q=%s"
let searchalias a = "alc"

let searchengine weblio = "http://ejje.weblio.jp/content_find?query=%s&searchType=exact"
let searchalias lio = "weblio"

let searchengine dictionary_com = "http://dictionary.reference.com/browse/%s"
let searchalias d = "dictionary_com"

let searchengine googleja = "https://www.google.com/search?as_q=%s&lr=lang_ja"
let searchalias gj = "googleja"

let searchengine googleen = "https://www.google.com/search?as_q=%s&lr=lang_en"
let searchalias ge = "googleen"

let searchengine oxford_collocation_dictionary = "http://ozdic.com/collocation-dictionary/%s"
let searchalias cd = "oxford_collocation_dictionary"

let barposition = "top"

map ; :

map <C-o> goBack
map <C-i> goForward

map <C-b> scrollFullPageUp
map <C-f> scrollFullPageDown
map <Space> scrollFullPageDown
map <S-Space> scrollFullPageUp

" https://github.com/1995eaton/chromium-vim/issues/204
map ^n nextSearchResult
map ^N previousSearchResult
map n :execute ^nzz<CR>
map N :execute ^Nzz<CR>

iunmap <C-k>   " prefer Cocoa app's default behaviour
iunmap <C-i>   " to use カナ変換

map h previousTab
map l nextTab

map <A-S-[> previousTab
map <A-S-]> nextTab

map d closeTab
map u lastClosedTab

map i goToInput

map <M-b> :chrome://bookmarks<CR>

map <M-f> openSearchBar

let blacklists = [
    \ "*://*/vsphere-client/*",
    \ "*://www.youtube.com/*",
    \ "*://www.nicovideo.jp/*",
    \ "*://www.lingq.com/*",
    \ "https://mail.google.com/*",
    \ "*://cacoo.com/*"
    \ ]

site 'https://twitter.com/*' {
  unmap .
}
