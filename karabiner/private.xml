<?xml version="1.0"?>
<root>
  <appdef>
    <appname>MACVIM</appname>
    <equal>org.vim.MacVim</equal>
  </appdef>
  <appdef>
    <appname>ITERM2</appname>
    <equal>com.googlecode.iterm2</equal>
  </appdef>
  <list>
    <item>
      <name>Auto IME off for Vim</name>
      <identifier>private.imeoff.vim</identifier>
      <only>ITERM2,MACVIM</only>
      <inputsource_only>JAPANESE</inputsource_only>
      <autogen>
        __KeyToKey__
        KeyCode::ESCAPE, ModifierFlag::NONE,
        KeyCode::ESCAPE,
        KeyCode::JIS_EISUU
      </autogen>
      <autogen>
        __KeyToKey__
        KeyCode::JIS_BRACKET_LEFT, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL,
        KeyCode::JIS_BRACKET_LEFT, ModifierFlag::CONTROL_L,
        KeyCode::JIS_EISUU
      </autogen>
    </item>
    <item>
      <name>Auto IME off for Tmux</name>
      <identifier>private.imeoff.tmux</identifier>
      <only>ITERM2</only>
      <inputsource_only>JAPANESE</inputsource_only>
      <autogen>
        __KeyToKey__
        KeyCode::T, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL,
        KeyCode::T, ModifierFlag::CONTROL_L,
        KeyCode::JIS_EISUU
      </autogen>
    </item>
    <item>
      <name>Auto IME off for spotlight</name>
      <identifier>private.imeoff.spotlight</identifier>
      <inputsource_only>JAPANESE</inputsource_only>
      <autogen>
        __KeyToKey__
        KeyCode::J, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND,
        KeyCode::JIS_EISUU,
        KeyCode::J, ModifierFlag::COMMAND_L
      </autogen>
    </item>
  </list>
</root>

