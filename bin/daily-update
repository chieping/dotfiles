#!/bin/bash

vim_plugins()
{
  echo "####    vim plugins    ####"
  vim -n -e -s -S ~/.vimrc '+set runtimepath+=~/.vim/bundle/vimproc.vim/' \
                           '+verbose NeoBundleUpdate' \
                           '+! echo; echo; echo NeoBundleupdatesLog' \
                           '+verbose NeoBundleUpdatesLog' \
                           '+! echo' \
                           '+quit'
}

oh_my_zsh()
{
  echo "####    oh-my-zsh    ####"
  ZSH=~/.oh-my-zsh
  /usr/bin/env ZSH=$ZSH /bin/sh $ZSH/tools/upgrade.sh
}

homebrew()
{
  echo "####    homebrew    ####"
  brew update
  echo
  echo "brew outdated"
  brew outdated
}

ruby_build()
{
  echo "####    ruby-build    ####"
  local REPO_DIR=$RBENV_ROOT/plugins/ruby-build
  cd $REPO_DIR && git pull --stat
  echo
}

tmux_plugins()
{
  echo "####    tmux plugins    ####"
  ~/.tmux/plugins/tpm/bin/update_plugins all
}

vim_plugins
echo
oh_my_zsh
echo
ruby_build
echo
tmux_plugins
echo
type brew >/dev/null 2>&1 && homebrew
